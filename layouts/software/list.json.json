{{- $products := slice -}}
{{- range .Pages -}}
{{- $product := index (where site.Data.software.products "id" .Params.software_id) 0 -}}
{{- if $product -}}
{{- $useAreaNames := slice -}}
{{- range $product.use_areas -}}
  {{- $area := index (where site.Data.software.use_areas "id" .) 0 -}}
  {{- if $area -}}
    {{- $useAreaNames = $useAreaNames | append $area.name -}}
  {{- end -}}
{{- end -}}
{{- $item := dict
  "id" $product.id
  "slug" $product.slug
  "name" $product.name
  "description" $product.description
  "vendor" $product.vendor.name
  "country" $product.vendor.country
  "country_name" ($product.vendor.country_name | default $product.vendor.country)
  "risk_level" $product.sovereignty.level
  "cloud_act" $product.sovereignty.cloud_act
  "use_areas" $product.use_areas
  "use_area_names" $useAreaNames
  "url" .RelPermalink
-}}
{{- $products = $products | append $item -}}
{{- end -}}
{{- end -}}
{{- $products | jsonify -}}
