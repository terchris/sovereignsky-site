{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "content-types.schema.json",
  "title": "Content Types",
  "description": "Maps content sections to icons, colors, and display properties",
  "type": "object",
  "required": ["@context", "@type", "name", "itemListElement"],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org"
    },
    "@type": {
      "type": "string",
      "const": "ItemList"
    },
    "name": {
      "type": "string",
      "description": "Name of the collection"
    },
    "description": {
      "type": "string",
      "description": "Description of the collection"
    },
    "itemListElement": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/contentTypeItem"
      },
      "minItems": 1
    }
  },
  "$defs": {
    "contentTypeItem": {
      "type": "object",
      "required": ["@type", "identifier", "name", "namePlural", "icon", "color", "colorName", "urlPath"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "WebPageElement",
          "description": "schema.org type for page elements"
        },
        "identifier": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "description": "Unique identifier matching Hugo content section name"
        },
        "name": {
          "type": "string",
          "description": "Singular display name (e.g., 'Publication')"
        },
        "namePlural": {
          "type": "string",
          "description": "Plural display name (e.g., 'Publications')"
        },
        "description": {
          "type": "string",
          "description": "Short description of the content type"
        },
        "icon": {
          "type": "string",
          "description": "Icon identifier from icons.json",
          "x-validates-against": "data/icons/icons.json"
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Hex color code"
        },
        "colorName": {
          "type": "string",
          "description": "DaisyUI color name (e.g., 'primary', 'warning')"
        },
        "urlPath": {
          "type": "string",
          "pattern": "^/[a-z0-9-/]+/$",
          "description": "URL path to section list page"
        }
      },
      "additionalProperties": false
    }
  }
}
