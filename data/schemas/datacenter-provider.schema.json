{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://totalforsvarsaret.no/schemas/datacenter-provider.schema.json",
  "title": "SovereignSky Datacenter Provider",
  "description": "Schema for datacenter provider files in data/datacenters/",
  "type": "object",
  "required": [
    "identifier",
    "name",
    "providerType",
    "dateModified",
    "vendorCountryId",
    "regions"
  ],
  "additionalProperties": false,
  "properties": {
    "identifier": {
      "type": "string",
      "description": "Unique identifier for the provider (lowercase, used in filenames)",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the provider"
    },
    "providerType": {
      "type": "string",
      "description": "Classification of the provider (public cloud vs regional cloud vs datacenter operator).",
      "enum": [
        "hyperscaler",
        "regional_cloud",
        "datacenter_operator"
      ]
    },
    "dateModified": {
      "type": "string",
      "description": "Date this file was last verified/updated",
      "format": "date"
    },
    "vendorCountryId": {
      "type": "string",
      "description": "ISO 3166-1 alpha-2 code of the vendor's legal jurisdiction (HQ country)",
      "pattern": "^[A-Z]{2}$"
    },
    "url": {
      "type": "string",
      "description": "Provider's main website URL",
      "format": "uri"
    },
    "regions": {
      "type": "array",
      "description": "List of datacenter regions operated by this provider",
      "items": {
        "$ref": "#/definitions/region"
      }
    },
    "meta": {
      "type": "object",
      "description": "Metadata about this provider file",
      "required": [
        "source"
      ],
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string",
          "description": "URL to official source used to populate/verify this data",
          "format": "uri"
        }
      }
    }
  },
  "definitions": {
    "region": {
      "type": "object",
      "required": [
        "identifier",
        "name",
        "countryId"
      ],
      "additionalProperties": false,
      "properties": {
        "identifier": {
          "type": "string",
          "description": "Provider's official region identifier"
        },
        "name": {
          "type": "string",
          "description": "Human-readable region name"
        },
        "countryId": {
          "type": "string",
          "description": "ISO 3166-1 alpha-2 code where datacenter is physically located",
          "pattern": "^[A-Z]{2}$"
        },
        "city": {
          "type": "string",
          "description": "City or area where datacenter is located"
        },
        "coordinates": {
          "type": "array",
          "description": "Geographic coordinates [latitude, longitude]",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    }
  }
}
