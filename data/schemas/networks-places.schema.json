{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "networks-places.schema.json",
  "title": "Networks Places Dataset",
  "description": "Schema for data/networks/networks-places.json (schema.org Place + GeoCoordinates entries referenced by networks connections).",
  "type": "object",
  "required": ["@type", "name", "metadata", "places"],
  "properties": {
    "@context": { "type": ["object", "string"] },
    "@type": { "const": "Dataset" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "dateModified": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["schema", "schema_version"],
      "properties": {
        "schema": { "type": "string" },
        "schema_version": { "type": "integer" },
        "updated": { "type": "string" },
        "relation_keys": { "type": "object" }
      },
      "additionalProperties": true
    },
    "places": {
      "type": "array",
      "items": { "$ref": "#/$defs/place" }
    }
  },
  "$defs": {
    "place": {
      "type": "object",
      "required": ["@type", "identifier", "name", "geo"],
      "properties": {
        "@type": { "const": "Place" },
        "identifier": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "geo": {
          "type": "object",
          "required": ["@type", "latitude", "longitude"],
          "properties": {
            "@type": { "const": "GeoCoordinates" },
            "latitude": { "type": "number" },
            "longitude": { "type": "number" }
          },
          "additionalProperties": true
        },
        "address": { "type": "object" },
        "country_id": { "type": "string" },
        "territory_id": { "type": "string" },
        "operator_ids": { "type": "array", "items": { "type": "string" } },
        "related_datacenter_provider_ids": { "type": "array", "items": { "type": "string" } },
        "place_type": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}


