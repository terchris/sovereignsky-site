{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sovereignsky.io/schemas/law.schema.json",
  "title": "Law",
  "description": "Schema for individual law entries (schema.org Legislation type)",
  "type": "object",
  "required": [
    "@type",
    "identifier",
    "name",
    "description",
    "legislationDate",
    "legislationJurisdiction",
    "category",
    "governmentAccess",
    "dataProtection",
    "extraterritorial",
    "requiresLocalization",
    "requiresBackdoor"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "const": "Legislation",
      "description": "schema.org type"
    },
    "identifier": {
      "type": "string",
      "description": "Unique identifier for the law (URL-safe slug)",
      "pattern": "^[a-z0-9-]+$",
      "examples": ["gdpr", "cloud-act", "fisa-702"]
    },
    "name": {
      "type": "string",
      "description": "Short display name of the law",
      "examples": ["GDPR", "CLOUD Act", "FISA Section 702"]
    },
    "alternateName": {
      "type": "string",
      "description": "Full official name of the law",
      "examples": ["General Data Protection Regulation", "Clarifying Lawful Overseas Use of Data Act"]
    },
    "description": {
      "type": "string",
      "description": "Short description (20-50 words) - what the law is",
      "maxLength": 500
    },
    "abstract": {
      "type": "string",
      "description": "Medium description (50-100 words) - key finding or thesis"
    },
    "summary": {
      "type": "string",
      "description": "Detailed description (100-200 words) - fuller explanation"
    },
    "legislationDate": {
      "type": "string",
      "description": "Year the law was enacted or last significantly amended",
      "pattern": "^[0-9]{4}$",
      "examples": ["2018", "2020"]
    },
    "legislationJurisdiction": {
      "type": "array",
      "description": "List of jurisdiction IDs where the law applies",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "examples": [["US"], ["eu"], ["NO", "SE", "DK"]]
    },
    "legislationLegalForce": {
      "type": "string",
      "description": "Legal force status (schema.org LegalForceStatus)",
      "enum": ["InForce", "NotInForce", "PartiallyInForce"],
      "default": "InForce"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the official text or authoritative source"
    },
    "category": {
      "type": "string",
      "description": "Primary purpose or category of the law (references law_types.json)",
      "enum": ["privacy", "access", "surveillance", "localization", "security", "sector"]
    },
    "governmentAccess": {
      "type": "string",
      "description": "Level of government access to data enabled by the law",
      "enum": ["broad", "targeted", "limited", "none"]
    },
    "dataProtection": {
      "type": "string",
      "description": "Level of individual data protection provided",
      "enum": ["strong", "moderate", "weak", "none"]
    },
    "extraterritorial": {
      "type": "boolean",
      "description": "Whether the law claims jurisdiction beyond the country's borders",
      "default": false
    },
    "requiresLocalization": {
      "type": "boolean",
      "description": "Whether the law requires data to be stored within the jurisdiction",
      "default": false
    },
    "requiresBackdoor": {
      "type": "boolean",
      "description": "Whether authorities can compel decryption, backdoor access, or technical assistance",
      "default": false
    },
    "isRelatedTo": {
      "type": "array",
      "description": "Semantic relationships to other laws. Relationships are made bidirectional by the generate script.",
      "items": {
        "type": "object",
        "required": ["identifier", "type"],
        "properties": {
          "identifier": {
            "type": "string",
            "description": "Identifier of the related law",
            "pattern": "^[a-z0-9-]+$"
          },
          "type": {
            "type": "string",
            "description": "Type of relationship (references relationship_types.json)",
            "enum": ["implements", "interprets", "conflicts_with", "complements", "succeeds", "extends", "amends", "extended_by"]
          }
        },
        "additionalProperties": false
      }
    },
    "topics": {
      "type": "array",
      "description": "Topic identifiers for categorization (references topics.json)",
      "items": {
        "type": "string"
      },
      "examples": [["data-protection", "privacy", "surveillance"]]
    },
    "tags": {
      "type": "array",
      "description": "Free-form keywords for filtering and search",
      "items": {
        "type": "string"
      },
      "examples": [["data-protection", "privacy", "personal-data"]]
    },
    "audience": {
      "type": "array",
      "description": "Target audience identifiers (references audience.json)",
      "items": {
        "type": "string"
      },
      "examples": [["humanitarian", "enterprise", "public-sector"]]
    },
    "reviewStatus": {
      "type": "string",
      "description": "Editorial status. Only 'verified' content should be shown as factual.",
      "enum": ["ai-generated", "verified"],
      "default": "ai-generated"
    }
  },
  "additionalProperties": false
}
