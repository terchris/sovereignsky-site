{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "networks-actors.schema.json",
  "title": "Networks Actors Dataset",
  "description": "Schema for data/networks/networks-actors.json (actor registry used for ownership/jurisdiction display).",
  "type": "object",
  "required": ["@type", "name", "metadata", "actors"],
  "properties": {
    "@context": { "type": ["object", "string"] },
    "@type": { "const": "Dataset" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "dateModified": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["schema", "schema_version"],
      "properties": {
        "schema": { "type": "string" },
        "schema_version": { "type": "integer" },
        "updated": { "type": "string" },
        "relation_keys": { "type": "object" },
        "vocab": { "type": "object" }
      },
      "additionalProperties": true
    },
    "actors": {
      "type": "array",
      "items": { "$ref": "#/$defs/actor" }
    }
  },
  "$defs": {
    "actor": {
      "type": "object",
      "required": ["actor_id", "actor_name", "country_id"],
      "properties": {
        "@type": { "type": "string" },
        "actor_id": { "type": "string" },
        "actor_name": { "type": "string" },
        "actor_type": { "type": "string" },
        "country_id": { "type": "string" },
        "website": { "type": "string" },
        "notes": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}


