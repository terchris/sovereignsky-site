{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "networks-actors.schema.json",
  "title": "Networks Actors",
  "description": "Organizations referenced by networks dataset (owners, operators, consortium members). Root is an array of actors.",
  "type": "array",
  "items": {
    "$ref": "#/$defs/actor"
  },
  "$defs": {
    "actor": {
      "type": "object",
      "required": ["identifier", "name"],
      "properties": {
        "@type": {
          "type": "string",
          "const": "Organization"
        },
        "identifier": {
          "type": "string",
          "description": "Stable identifier"
        },
        "name": {
          "type": "string",
          "description": "Display name"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the organization"
        },
        "type": {
          "type": "string",
          "enum": [
            "infrastructure_operator",
            "network_operator",
            "telecom_operator",
            "datacenter_operator",
            "state_owned_enterprise",
            "project_company",
            "subsea_operator",
            "consortium",
            "tech_company",
            "system_supplier",
            "cable_manufacturer",
            "installation_contractor"
          ]
        },
        "countryId": {
          "type": "string",
          "description": "ISO 3166-1 alpha-2 code. References data/countries/countries.json"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  }
}
