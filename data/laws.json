{
  "$schema": "./schemas/law.schema.json",
  "definitions": {
    "type": {
      "description": "Primary purpose of the law",
      "values": {
        "privacy": "Protects individual data rights and privacy",
        "access": "Enables government or law enforcement data access",
        "surveillance": "Establishes surveillance infrastructure or powers",
        "localization": "Requires data to be stored within jurisdiction",
        "security": "National security framework without direct data access provisions",
        "sector": "Regulates specific sector (AI, telecom, finance, etc.)"
      }
    },
    "government_access": {
      "description": "Level of government access to data enabled by the law",
      "values": {
        "broad": "Bulk collection, minimal oversight, backdoor requirements, or extraterritorial compulsion",
        "targeted": "Access with warrants or court orders for specific investigations",
        "limited": "Strong procedural safeguards, narrow scope, independent oversight",
        "none": "No government access provisions in this law"
      }
    },
    "data_protection": {
      "description": "Level of individual data protection provided",
      "values": {
        "strong": "Comprehensive rights (access, erasure, portability), strong enforcement, independent DPA",
        "moderate": "Some protections but with significant exceptions or weaker enforcement",
        "weak": "Limited rights or broad government/national security exemptions",
        "none": "No individual data protection provisions"
      }
    },
    "extraterritorial": {
      "description": "Whether the law claims jurisdiction beyond the country's borders",
      "type": "boolean"
    },
    "requires_localization": {
      "description": "Whether the law requires data to be stored within the jurisdiction",
      "type": "boolean"
    },
    "requires_backdoor": {
      "description": "Whether authorities can compel decryption, backdoor access, or technical assistance",
      "type": "boolean"
    }
  },
